<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.persoon.PersoonEdit"
        datasource="persoonDs"
        focusComponent="fieldGroup"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.persoon">
    <dsContext>
        <datasource id="persoonDs"
                    class="eu.maryns.romeo.kinderkankerfonds.entity.Persoon"
                    view="persoon-browse-view">
            <collectionDatasource id="adressenDs"
                                  property="adressen"/>
            <collectionDatasource id="tagsDs"
                                  property="tags"/>
        </datasource>
        <collectionDatasource id="geslachtsDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Geslacht"
                              view="_minimal">
            <query>
                <![CDATA[select e from kinderkankerfonds$Geslacht e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="linkedRelatiesDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Relatie"
                              view="relatie-browse-view">
            <query>
                <![CDATA[select e from kinderkankerfonds$Relatie e where e.persoonDoel.id = :ds$persoonDs or e.persoonOrigine.id = :ds$persoonDs]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoriesDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Categorie"
                              view="_minimal"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="persoonDs"
                    responsive="true">
            <column width="250px">
                <field property="voornaam"/>
                <field property="familienaam"/>
                <field property="geboortedatum"/>
                <field optionsDatasource="geslachtsDs"
                       property="geslacht"/>
            </column>
        </fieldGroup>
        <tokenList caption="Categorie"
                   captionProperty="naam"
                   datasource="tagsDs"
                   inline="true"
                   responsive="true">
            <addButton caption="Toevoegen"
                       icon="PLUS"/>
            <lookup captionProperty="naam"
                    optionsDatasource="categoriesDs"/>
        </tokenList>
        <groupBox id="adressenBox"
                  caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.adressen"
                  collapsable="true"
                  responsive="true">
            <table id="adressenTable"
                   height="200px"
                   responsive="true"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="straatnaam"/>
                    <column id="huisnummer"/>
                    <column id="bus"/>
                    <column id="postcode"/>
                    <column id="stad"/>
                    <column id="type"/>
                </columns>
                <rows datasource="adressenDs"/>
                <buttonsPanel responsive="true">
                    <button action="adressenTable.create"
                            responsive="true"/>
                    <button action="adressenTable.edit"
                            responsive="true"/>
                    <button action="adressenTable.remove"
                            responsive="true"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <groupBox id="relatiesBox"
                  caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.relaties"
                  collapsable="true"
                  collapsed="true"
                  responsive="true">
            <table id="linkedRelatiesTable"
                   height="200px"
                   responsive="true"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="persoonOrigine"
                            link="true"
                            linkScreen="kinderkankerfonds$Persoon.edit"
                            linkScreenOpenType="THIS_TAB"/>
                    <column id="type"/>
                    <column id="persoonDoel"
                            link="true"
                            linkScreen="kinderkankerfonds$Persoon.edit"
                            linkScreenOpenType="THIS_TAB"/>
                </columns>
                <rows datasource="linkedRelatiesDs"/>
                <buttonsPanel responsive="true">
                    <button action="linkedRelatiesTable.create"
                            responsive="true"/>
                    <button action="linkedRelatiesTable.edit"
                            responsive="true"/>
                    <button action="linkedRelatiesTable.remove"
                            responsive="true"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               responsive="true"
               screen="editWindowActions"/>
    </layout>
</window>
