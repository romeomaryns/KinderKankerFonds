<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.persoon.PersoonBrowse"
        focusComponent="persoonsTable"
        lookupComponent="persoonsTable"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.persoon">
    <dsContext>
        <groupDatasource id="persoonsDs"
                         class="eu.maryns.romeo.kinderkankerfonds.entity.Persoon"
                         view="persoon-browse-view">
            <query>
                <![CDATA[select e from kinderkankerfonds$Persoon e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="persoonsTable"
            spacing="true">
        <filter id="filter"
                applyTo="persoonsTable"
                datasource="persoonsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="persoonsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column id="voornaam"/>
                <column id="familienaam"/>
                <column id="geboortedatum"/>
                <column id="geslacht"/>
                <column id="tags"/>
                <column id="adressen"/>
            </columns>
            <rows datasource="persoonsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="persoonsTable.create"/>
                <button id="editBtn"
                        action="persoonsTable.edit"/>
                <button id="removeBtn"
                        action="persoonsTable.remove"/>
                <button id="excelBtn"
                        action="persoonsTable.excel"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
