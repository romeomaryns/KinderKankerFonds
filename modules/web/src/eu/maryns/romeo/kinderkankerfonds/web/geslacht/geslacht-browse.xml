<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.geslacht.GeslachtBrowse"
        focusComponent="geslachtsTable"
        lookupComponent="geslachtsTable"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.geslacht">
    <dsContext>
        <groupDatasource id="geslachtsDs"
                         class="eu.maryns.romeo.kinderkankerfonds.entity.Geslacht"
                         view="_local">
            <query>
                <![CDATA[select e from kinderkankerfonds$Geslacht e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="geslachtsTable"
            spacing="true">
        <filter id="filter"
                applyTo="geslachtsTable"
                datasource="geslachtsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="geslachtsTable"
                    width="100%">
            <actions>
                <action id="create"
                        caption="mainMsg://button.create"
                        icon="ADD_ACTION"/>
                <action id="edit"
                        caption="mainMsg://button.edit"
                        icon="EDIT_ACTION"/>
                <action id="remove"
                        caption="mainMsg://button.remove"
                        icon="REMOVE_ACTION"/>
            </actions>
            <columns>
                <column id="naam"/>
            </columns>
            <rows datasource="geslachtsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="geslachtsTable.create"/>
                <button id="editBtn"
                        action="geslachtsTable.edit"/>
                <button id="removeBtn"
                        action="geslachtsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
