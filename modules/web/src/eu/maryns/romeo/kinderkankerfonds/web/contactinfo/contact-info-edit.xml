<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.contactinfo.ContactInfoEdit"
        datasource="contactInfoDs"
        focusComponent="fieldGroup"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.contactinfo">
    <dsContext>
        <datasource id="contactInfoDs"
                    class="eu.maryns.romeo.kinderkankerfonds.entity.ContactInfo"
                    view="contactInfo-view-full">
            <collectionDatasource id="notitiesDs"
                                  property="notities"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <groupBox caption="Persoon">
            <textField id="persoonTextField"
                       datasource="contactInfoDs"
                       enable="false"
                       property="persoon"
                       stylename="borderless"/>
        </groupBox>
        <tabSheet tabCaptionsAsHtml="true">
            <tab id="algemeenTab"
                 caption="Algemeen"
                 icon="CHEVRON_RIGHT"
                 margin="true,false,false,false"
                 spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="contactInfoDs"
                            height="100%">
                    <column width="250px">
                        <field property="telefoon"/>
                        <field property="gsm"/>
                        <field property="email"/>
                        <field property="actief"/>
                    </column>
                </fieldGroup>
            </tab>
            <tab id="notitiesTab"
                 caption="Notities"
                 icon="COMMENTS_O"
                 lazy="true"
                 margin="true,false,false,false"
                 spacing="true">
                <table id="notitiesTable"
                       height="100%"
                       width="100%">
                    <actions>
                        <action id="create"
                                caption="mainMsg://button.create"
                                icon="ADD_ACTION"
                                openType="DIALOG"/>
                        <action id="edit"
                                caption="mainMsg://button.edit"
                                icon="EDIT_ACTION"/>
                        <action id="remove"
                                caption="mainMsg://button.remove"
                                icon="REMOVE_ACTION"/>
                    </actions>
                    <columns>
                        <column id="omschrijving"/>
                    </columns>
                    <rows datasource="notitiesDs"/>
                    <buttonsPanel>
                        <button id="create"
                                action="notitiesTable.create"/>
                        <button id="editButton"
                                action="notitiesTable.edit"/>
                        <button id="remove"
                                action="notitiesTable.remove"/>
                    </buttonsPanel>
                </table>
            </tab>
        </tabSheet>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
