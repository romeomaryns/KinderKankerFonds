<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.persoon.PersoonEdit"
        datasource="persoonDs"
        focusComponent="fieldGroup"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.persoon">
    <dsContext>
        <datasource id="persoonDs"
                    class="eu.maryns.romeo.kinderkankerfonds.entity.Persoon"
                    view="persoon-browse-view">
            <collectionDatasource id="tagsDs"
                                  property="categorieen"/>
            <collectionDatasource id="adressenDs"
                                  property="adressen"/>
            <collectionDatasource id="relatiesDs"
                                  property="relaties"/>
            <collectionDatasource id="contactinfoDs"
                                  property="contactinfo"/>
            <collectionDatasource id="notitiesDs"
                                  property="notities"/>
        </datasource>
        <collectionDatasource id="geslachtsDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Geslacht"
                              view="_minimal">
            <query>
                <![CDATA[select e from kinderkankerfonds$Geslacht e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="ziekenhuisesDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Ziekenhuis"
                              view="_minimal">
            <query>
                <![CDATA[select e from kinderkankerfonds$Ziekenhuis e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoriesDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.Categorie"
                              view="_local">
            <query>
                <![CDATA[select e from kinderkankerfonds$Categorie e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox"
                   spacing="true">
            <fieldGroup id="fieldGroup"
                        datasource="persoonDs">
                <column width="250px">
                    <field property="voornaam" tabIndex="1" required="true"/>
                    <field property="familienaam" tabIndex="1" required="true"/>
                    <field optionsDatasource="geslachtsDs" tabIndex="1"
                           property="geslacht"/>
                </column>
                <column>
                    <field property="geboortedatum" tabIndex="2"/>
                    <field property="overlijdensdatum" tabIndex="2"/>
                    <field optionsDatasource="ziekenhuisesDs" tabIndex="2"
                           property="ziekenhuis"/>
                </column>
                <column>
                    <field property="aanspreking1" caption="Aanspreking1" tabIndex="3"/>
                    <field property="aanspreking2" caption="Aanspreking2" tabIndex="3"/>
                </column>
                <column>
                    <field editable="false"
                           property="uniekeid"
                           visible="false"/>
                </column>
            </fieldGroup>
            <tabSheet responsive="true"
                      tabCaptionsAsHtml="true">
                <tab id="algemeenTab"
                     caption="Algemene info"
                     icon="CHEVRON_RIGHT"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox id="tagsBox"
                              caption="CategorieÃ«n">
                        <tokenList datasource="tagsDs"
                                   inline="true"
                                   position="TOP"
                                   responsive="true">
                            <clearButton caption="mainMsg://button.clear"
                                         icon="PICKERFIELD_CLEAR"/>
                            <lookup optionsDatasource="categoriesDs"/>
                        </tokenList>
                    </groupBox>
                    <grid margin="true"
                          spacing="true">
                        <columns count="2"/>
                        <rows>
                            <row>
                                <label value="Actief"/>
                                <checkBox id="actiefCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="actief"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Oudercomite"/>
                                <checkBox id="oudercomiteCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="oudercomite"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Familiedag"/>
                                <checkBox id="familieCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="familiedag"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Ontmoetingsdag"/>
                                <checkBox id="ontmoetingsdagCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="ontmoetingsdag"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Raakpunt"/>
                                <checkBox id="raakpuntCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="raakpunt"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Comfort Forfait"/>
                                <checkBox id="comfortforfaitCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="comfortforfait"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Palliatief Forfait"/>
                                <checkBox id="palliatiefforfaitCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="palliatiefforfait"
                                          stylename="onoffswitch"/>
                            </row>
                            <row>
                                <label value="Personeel"/>
                                <checkBox id="personeelCheckbox"
                                          datasource="persoonDs"
                                          height="100%"
                                          property="personeel"
                                          stylename="onoffswitch"/>
                            </row>
                        </rows>
                    </grid>
                </tab>
                <tab id="contactinfoTab"
                     caption="Contact info"
                     icon="PHONE"
                     lazy="true"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox id="contactinfoBox"
                              caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.contactinfo"
                              height="100%">
                        <table id="contactinfoTable"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"
                                        caption="mainMsg://button.create"
                                        icon="ADD_ACTION"/>
                                <action id="edit"
                                        caption="msg://button.edit"
                                        icon="EDIT_ACTION"/>
                                <action id="remove"
                                        caption="mainMsg://button.remove"
                                        icon="REMOVE_ACTION"/>
                            </actions>
                            <columns>
                                <column id="telefoon"/>
                                <column id="gsm"/>
                                <column id="email"/>
                            </columns>
                            <rows datasource="contactinfoDs"/>
                            <buttonsPanel>
                                <button action="contactinfoTable.create"/>
                                <button action="contactinfoTable.edit"/>
                                <button action="contactinfoTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
                <tab id="adressenTab"
                     caption="Adres info"
                     icon="ROAD"
                     lazy="true"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox id="adressenBox"
                              caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.adressen"
                              height="100%">
                        <table id="adressenTable"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"
                                        caption="mainMsg://button.create"
                                        icon="ADD_ACTION"/>
                                <action id="edit"
                                        caption="mainMsg://button.edit"
                                        icon="EDIT_ACTION"/>
                                <action id="remove"
                                        caption="mainMsg://button.remove"
                                        icon="REMOVE_ACTION"/>
                            </actions>
                            <columns>
                                <column id="straatnaam"/>
                                <column id="huisnummer"/>
                                <column id="bus"/>
                                <column id="postcode"/>
                                <column id="stad"/>
                                <column id="actief"/>
                                <column id="land"/>
                                <column id="type"/>
                                <column id="categorie"/>
                                <column id="notities"/>
                            </columns>
                            <rows datasource="adressenDs"/>
                            <buttonsPanel>
                                <button action="adressenTable.create"/>
                                <button action="adressenTable.edit"/>
                                <button action="adressenTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
                <tab id="relatiesTab"
                     caption="Relatie info"
                     icon="RANDOM"
                     lazy="true"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox id="relatiesBox"
                              caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.relaties"
                              height="100%">
                        <table id="relatiesTable"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"
                                        caption="mainMsg://button.create"
                                        icon="ADD_ACTION"/>
                                <action id="edit"
                                        caption="mainMsg://button.edit"
                                        icon="EDIT_ACTION"/>
                                <action id="remove"
                                        caption="mainMsg://button.remove"
                                        icon="REMOVE_ACTION"/>
                            </actions>
                            <columns>
                                <column id="persoonOrigine"
                                        link="true"
                                        linkScreen="kinderkankerfonds$Persoon.edit"
                                        linkScreenOpenType="THIS_TAB"/>
                                <column id="type"/>
                                <column id="persoonDoel"
                                        link="true"
                                        linkScreen="kinderkankerfonds$Persoon.edit"
                                        linkScreenOpenType="THIS_TAB"/>
                            </columns>
                            <rows datasource="relatiesDs"/>
                            <buttonsPanel>
                                <button action="relatiesTable.create"/>
                                <button action="relatiesTable.edit"/>
                                <button action="relatiesTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
                <tab id="notitiesTab"
                     caption="Notities"
                     icon="COMMENTS_O"
                     lazy="true"
                     margin="true,false,false,false"
                     spacing="true">
                    <groupBox id="notitiesBox"
                              caption="msg://eu.maryns.romeo.kinderkankerfonds.entity/Persoon.notities"
                              height="100%">
                        <table id="notitiesTable"
                               height="100%"
                               width="100%">
                            <actions>
                                <action id="create"
                                        caption="mainMsg://button.create"
                                        icon="ADD_ACTION"/>
                                <action id="edit"
                                        caption="mainMsg://button.edit"
                                        icon="EDIT_ACTION"/>
                                <action id="remove"
                                        caption="mainMsg://button.remove"
                                        icon="REMOVE_ACTION"/>
                            </actions>
                            <columns>
                                <column id="omschrijving"/>
                            </columns>
                            <rows datasource="notitiesDs"/>
                            <buttonsPanel>
                                <button action="notitiesTable.create"/>
                                <button action="notitiesTable.edit"/>
                                <button action="notitiesTable.remove"/>
                            </buttonsPanel>
                        </table>
                    </groupBox>
                </tab>
            </tabSheet>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
