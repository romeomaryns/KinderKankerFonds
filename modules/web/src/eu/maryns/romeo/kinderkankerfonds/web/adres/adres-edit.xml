<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.adres.AdresEdit"
        datasource="adresDs"
        focusComponent="fieldGroup"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.adres">
    <dsContext>
        <datasource id="adresDs"
                    class="eu.maryns.romeo.kinderkankerfonds.entity.Adres"
                    view="adres-full-view"/>
        <collectionDatasource id="typesDs"
                              class="eu.maryns.romeo.kinderkankerfonds.entity.AdresType"
                              view="_minimal"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="adresDs">
            <column width="250px">
                <field property="straatnaam"/>
                <field property="huisnummer"/>
                <field property="bus"/>
                <field property="postcode"/>
                <field property="stad"/>
                <field optionsDatasource="typesDs"
                       property="type"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
