<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="eu.maryns.romeo.kinderkankerfonds.web.adres.AdresBrowse"
        focusComponent="adresesTable"
        lookupComponent="adresesTable"
        messagesPack="eu.maryns.romeo.kinderkankerfonds.web.adres">
    <dsContext>
        <groupDatasource id="adresesDs"
                         class="eu.maryns.romeo.kinderkankerfonds.entity.Adres"
                         view="adres-full-view">
            <query>
                <![CDATA[select e from kinderkankerfonds$Adres e]]>
            </query>
            <collectionDatasource id="notitiesDs"
                                  property="notities"/>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="adresesTable"
            spacing="true">
        <filter id="filter"
                applyTo="adresesTable"
                datasource="adresesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="adresesTable"
                    multiselect="true"
                    width="100%">
            <actions>
                <action id="create"
                        caption="mainMsg://button.create"
                        icon="ADD_ACTION"/>
                <action id="edit"
                        caption="mainMsg://button.edit"
                        icon="EDIT_ACTION"/>
                <action id="remove"
                        caption="mainMsg://button.remove"
                        icon="REMOVE_ACTION"/>
                <action id="excel"
                        caption="mainMsg://button.excel"
                        icon="EXCEL_ACTION"/>
            </actions>
            <columns>
                <column id="straatnaam"/>
                <column id="huisnummer"/>
                <column id="bus"/>
                <column id="postcode"/>
                <column id="stad"/>
                <column id="type"/>
                <column id="persoon"
                        link="true"
                        linkScreen="kinderkankerfonds$Persoon.edit"
                        linkScreenOpenType="THIS_TAB"/>
                <column id="land"/>
                <column id="categorie"/>
            </columns>
            <rows datasource="adresesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="adresesTable.create"/>
                <button id="editBtn"
                        action="adresesTable.edit"/>
                <button id="removeBtn"
                        action="adresesTable.remove"/>
                <button id="excelBtn"
                        action="adresesTable.excel"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
